# Base path used by the frontend API client
VITE_LICENSE_ADMIN_API_BASE=/api/admin

# Vite dev proxy target (backend API)
VITE_API_PROXY_TARGET=http://127.0.0.1:8000

# Comma-separated hosts allowed to open the Vite dev server
# Add your LAN IP and intranet domain, e.g. 192.168.178.52,portal.intern.local
VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# Optional HMR settings for stable hot reload via IP/domain
VITE_HMR_HOST=
VITE_HMR_CLIENT_PORT=
VITE_HMR_PROTOCOL=ws
